<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <script>
    function enterSocketServer(roomId) {
      $.ajax({
        url: 'http://127.0.0.1:3030/room', 
        method: 'GET',
        contentType: 'application/json',
        data: {'roomId': roomId}
      }).done( (res) => {
        $('#sockets').html(res)
      })
    }
    
    function connectSocketServer() {
      console.log({'userId': $('userid').val()})
      $.ajax({
        url: 'http://127.0.0.1:3000/rooms',
        method: 'GET',
        contentType: 'application/json',
        data: {userId: $('#userid').val()}
      }).done( (res) => {
        var roomId = res.roomId
        enterSocketServer(roomId);
      })
    }
  </script>
    <title><%= title %></title>
  </head>
  <body>
    <div class="container">
      <div class="row mt-5">
        <h1> Socket Test</h1>
      </div>
      <div class="row mt-5">
        <div class="col-12">
          <div class="form-group">
            <label for="userid"> Your ID </label>
            <input type="text" class="form-control" id="userid" placeholder="ID" name="userid">
          </div>
          <button type="button" class="btn btn-primary" onclick="connectSocketServer()"> Go to Chatting Server</button>
        </div>
      </div>
      <div class="row mt-5"></div>
        <div class="col-12">
          <div class="form-group" id='sockets'>

          </div>
        </div>
    </div>
  </body>
</html>
